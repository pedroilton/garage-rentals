<%# <h3 class="m-3 text-center">CHOOSE THE PERFECT GARAGE FOR YOU</h3> %>
<div class="text-center m-3">
  <h3 style="font-size: 18px">
    <span class="moving-text" id="banner-typed-text"></span>
  </h3>
</div>

<div class="d-flex">

  <%# box da esquerda - listagem das garagens %>
  <div class="container">
    <div class="grid-cards">
      <% @garages.each do |garage| %>
        <div class="card-product">
          <% if garage.photos.attached? %> 
            <%= cl_image_tag garage.photos.first.key %>
          <% end %>
          <div class="card-product-infos">
            <h2><%= link_to garage.title, garage %></h2> 
            <p><%= "#{garage.rating} stars" %></p>
            <p><%= garage.address %></p>
            <div>
                <p id="price">R$ <%= sprintf('%.2f', garage.price).gsub('.', ',') %></p>
            </div>
          </div><!-- Fim do Card-Product-infos-->
        </div><!-- Fim do Card-Product-->
      <% end %>
    </div><!-- Fim do grid de Cards-->
  </div>

  <%# box da direita - mapa %>
  <div id="map"
      style="width: 100%; 
              height: 100vh; 
              position: sticky;
              top: 0;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>