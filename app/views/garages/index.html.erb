<h2 id="index-title">CHOOSE THE PERFECT GARAGE FOR YOU</h2>

<div class="d-flex">

<%# box da esquerda - listagem das garagens %>
<div class="container">
  <div class="grid-cards">
<% @garages.each do |garage| %>
    <div class="card-product">
      <% if garage.photos.attached? %> 
        <%= cl_image_tag garage.photos.first.key %>
      <% end %>
      <div class="card-product-infos">
        <h2><%= link_to garage.title, garage %></h2> 
        <p><%= "#{garage.rating} stars" %></p>
        <p><%= garage.address %></p>
        <div>
        <p id="price"><%= "R$ #{garage.price}" %></p>
        </div>
      </div><!-- Fim do Card-Product-infos-->
    </div><!-- Fim do Card-Product-->
<% end %>
  </div><!-- Fim do grid de Cards-->
</div>

<%# box da direita - mapa %>
<div id="map"
     style="width: 100%; 
            height: 100vh; 
            position: sticky;
            top: 0;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

</div>